@model CarViewModel
@{
    ViewData["Title"] = "Make Order";
}

<div class="container">
    <form method="POST" asp-controller="Order" asp-action="MakeOrder">
        <div class="form-group hidden">
            <input type="text"
                   class="form-control"
                   name="carId"
                   id="carId"
                   value="@Model.Id">
        </div>
        <div class="form-group">
            <label for="marketName">Client Name</label>
            <input type="text"
                   class="form-control"
                   name="clientName"
                   id="clientName"
                   placeholder="Enter Name">
        </div>
        <div class="form-group">
            <label for="marketName">Address</label>
            <input type="text"
                   class="form-control"
                   name="address"
                   id="address"
                   placeholder="Enter Address">
        </div>
        <div>
            <a class="btn btn-primary" asp-controller="Cars" asp-action="Index">
                Back
            </a>
            <button type="submit" class="btn btn-success">
                Submit
            </button>
        </div>
    </form>
</div>